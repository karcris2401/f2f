<SwipeScreen>:
    FloatLayout:
        Image:
            id: profile_image
            source: ''
            size_hint: 0.9, 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            opacity: 0

        Label:
            id: profile_info
            text: ""
            font_size: 20
            halign: 'center'
            size_hint: 0.8, 0.1
            pos_hint: {'center_x': 0.5, 'y': 0.2}

        Button:
            text: "Like"
            size_hint: 0.2, 0.1
            pos_hint: {'x': 0.1, 'y': 0.05}
            on_press: root.on_swipe_right()

        Button:
            text: "Dislike"
            size_hint: 0.2, 0.1
            pos_hint: {'x': 0.7, 'y': 0.05}
            on_press: root.on_swipe_left()
